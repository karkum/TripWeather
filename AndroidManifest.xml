<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.tripweather"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".TripWeatherActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library android:name="com.google.android.maps" >
        </uses-library>

        <activity android:name=".GetMoreInfo" />
        <activity android:name=".NewDirectionsActivity" />
        <activity android:name=".NewWeatherDisplayActivity" />
        <activity
            android:label="About Information"
            android:name=".DisplayAboutInfoActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name=".DetailedDirectionsActivity" />
        <activity android:name=".WeatherDisplayActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

</manifest>